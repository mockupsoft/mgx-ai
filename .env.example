# FastAPI Backend Configuration
# Copy this file to .env and customize for your environment

# API Server Settings
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=false
API_WORKERS=1

# MGX Agent Settings
MGX_MAX_ROUNDS=5
MGX_MAX_REVISION_ROUNDS=2
MGX_MAX_MEMORY_SIZE=50
MGX_ENABLE_CACHING=true
MGX_CACHE_BACKEND=memory
MGX_CACHE_MAX_ENTRIES=1024
MGX_CACHE_TTL_SECONDS=3600

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=mgx_agent
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration (Optional)
# REDIS_URL=redis://localhost:6379

# GitHub Repository Linking (Optional)
# Use a GitHub App (recommended) OR a Personal Access Token (PAT).
#
# GitHub App auth:
# GITHUB_APP_ID=123456
# GITHUB_CLIENT_ID=Iv1.abcdef123456
# GITHUB_PRIVATE_KEY_PATH=/run/secrets/github_app_private_key.pem
#
# PAT fallback (classic token or fine-grained token with required scopes):
# GITHUB_PAT=ghp_...
#
# Local directory used to cache clones (must be writable by the API process)
# GITHUB_CLONE_CACHE_DIR=/tmp/mgx-agent-repos

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
