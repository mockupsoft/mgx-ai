{
  "id": null,
  "uid": "mgx-production-switch",
  "title": "MGX Production Switch",
  "tags": ["mgx", "production", "deploy"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP 5xx Rate",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{job=\"mgx-agent\",status=~\"5..\"}[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "p95 Latency",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"mgx-agent\"}[5m])) by (le))",
          "refId": "A"
        }
      ]
    }
  ]
}
